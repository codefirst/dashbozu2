.nav-bar
  .row-fluid
    %h3{style: 'display:inline'}  Listing projects
.row-fluid
  .pull-right= link_to 'Show all activities', activities_path
.row-fluid
  .span12
    %table.table.table-striped
      %thead
        %tr
          %th Name
          %th Provider
          %th API key
      %tbody
        - @projects.each do |project|
          %tr
            %td= link_to project.name, project_activities_path(project.api_key)
            %td= project.provider
            %td= project.api_key
