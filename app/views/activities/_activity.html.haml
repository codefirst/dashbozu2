:css
  .activity-right {
    background-image: url(#{image_path activity.source+'.png'});
    background-repeat: no-repeat;
    padding-left: 80px;
    background-size: 70px auto;
  }
  .activity-author{
    color: #7e7e7e;
  }
  .status-success {
    background-color: #dff0d8;
  }
  .status-error {
    background-color: #f2dede;
  }
  .status-warn {
    background-color: #fcf8e3;
  }

.activity{class: 'status-' + activity.status}
  .activity-right
    .activity-title
      = image_tag activity.icon_url if activity.icon_url
      = link_to activity.title, activity.url
    .activity-author
      = activity.author
    .activity-body
      = activity.body
    .activity-created
      = activity.created_at

